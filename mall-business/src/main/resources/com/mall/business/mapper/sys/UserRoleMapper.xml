<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.business.mapper.sys.UserRoleMapper">
    <insert id="insert" parameterType="com.mall.entity.sys.UserRoleDO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_user_role
        <trim prefix="(" suffix=")" suffixOverrides=","> 
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="roleId != null">role_id,</if>
         </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=","> 
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="roleId != null">#{roleId},</if>
         </trim>
    </insert>

    <insert id="batchInsert" parameterType="list">
      INSERT INTO sys_user_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id,
            user_id,
            role_id
        </trim>
        VALUES
        <foreach collection="list" item="item" separator="," open="(" close=")">
            #{item.id},
            #{item.userId},
            #{item.roleId}
        </foreach>
    </insert>

    <update id="update" parameterType="com.mall.entity.sys.UserRoleDO">
        UPDATE sys_user_role
        <set> 
            <if test="id != null"> id = #{id}, </if>
            <if test="userId != null"> user_id = #{userId}, </if>
            <if test="roleId != null"> role_id = #{roleId}, </if>
         </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM sys_user_role
        WHERE id = #{id}
    </delete>

    <delete id="deleteByIds">
        DELETE FROM sys_user_role
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteByUserId">
        DELETE FROM sys_user_role
        WHERE user_id = #{userId}
    </delete>

    <select id="searchByCondition" parameterType="com.mall.dto.condition.sys.UserRoleConditionDTO"
    resultMap="UserRoleResultMap">
        SELECT
        <include refid="queryColumn"/>
        FROM sys_user_role
        <include refid="queryWhere"/>
    </select>

    <resultMap type="com.mall.entity.sys.UserRoleDO" id="UserRoleResultMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
     </resultMap>

    <sql id="queryColumn"> 
        id,
        user_id,
        role_id
     </sql>

    <sql id="queryWhere">
        <where> 
            <if test="id != null"> and id = #{id} </if>
            <if test="userId != null"> and user_id = #{userId} </if>
            <if test="roleId != null"> and role_id = #{roleId} </if>
         </where>
    </sql>
</mapper>
