    <insert id="insert" parameterType="com.mall.entity.UserEntity">
        INSERT INTO user (
            id,
            user_name,
            create_user_id,
            create_user_name,
            create_time,
            update_user_id,
            update_user_name,
            update_time
        )
        VALUES
            (
                #{id,jdbcType=BIGINT},
                #{userName,jdbcType=VARCHAR},
                #{createUserId,jdbcType=BIGINT},
                #{createUserName,jdbcType=VARCHAR},
                now(3),
                #{updateUserId,jdbcType=BIGINT},
                #{updateUserName,jdbcType=VARCHAR},
                now(3)
            )
    </insert>

    <delete id="deleteById">
        UPDATE user
        SET is_del = 1,update_time=now(3)
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.mall.entity.UserEntity">
        UPDATE user
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName,jdbcType=VARCHAR},
            </if>
            <if test="createUserId != null">
                create_user_id = #{createUserId,jdbcType=BIGINT},
            </if>
            <if test="createUserName != null and createUserName != ''">
                create_user_name = #{createUserName,jdbcType=VARCHAR},
            </if>
            <if test="updateUserId != null">
                update_user_id = #{updateUserId,jdbcType=BIGINT},
            </if>
            <if test="updateUserName != null and updateUserName != ''">
                update_user_name = #{updateUserName,jdbcType=VARCHAR},
            </if>
            <if test="isDel != null">
                is_del = #{isDel,jdbcType=INTEGER},
            </if>
            update_time=now(3)
        </set>
        WHERE id = #{id}
    </update>

    <sql id="selectUserColumn">
        id,
        user_name,
        create_user_id,
        create_user_name,
        create_time,
        update_user_id,
        update_user_name,
        update_time,
        is_del
    </sql>

    <select id="findById" resultType="com.mall.entity.UserEntity" parameterType="Long">
        SELECT
            <include refid="selectUserColumn"/>
        FROM user
        WHERE id = #{id}
    </select>
</mapper>